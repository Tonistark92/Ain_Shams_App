<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2726"
    tools:context="ui.Gpa"

    >

    <Button
        android:id="@+id/getCGPA"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button"
        android:text="Get CGPA"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/CGPA"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="@+id/button" />

    <TextView
        android:id="@+id/TX"
        android:layout_width="83dp"
        android:layout_height="38dp"
        android:layout_marginBottom="352dp"
        android:text="Current CGPA"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <EditText
        android:id="@+id/noOfHoursCGPA"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="429dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#2DFA16"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/credit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Current_CGPA"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#2DFA16"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/noOfHoursCGPA"
        app:layout_constraintEnd_toEndOf="@+id/grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TX2"
        android:layout_width="91dp"
        android:layout_height="72dp"
        android:layout_marginBottom="28dp"
        android:text="number of credit hours for CGPA"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/noOfHoursCGPA"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/textView" />

    <TextView
        android:id="@+id/GPA"
        android:layout_width="303dp"
        android:layout_height="38dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/CGPA"
        android:layout_width="303dp"
        android:layout_height="38dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TX"
        app:layout_constraintVertical_bias="0.639" />

    <Button
        android:id="@+id/button"
        android:layout_width="77dp"
        android:layout_height="78dp"
        android:background="@drawable/button"
        android:text="Get GPA"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/adding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="65dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:text="Grade"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/grade"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <ImageButton


        android:id="@+id/adding"
        android:layout_width="74dp"
        android:layout_height="86dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_plus"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Credit hour for course"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/credit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/grade"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="101dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#2DFA16"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/credit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/credit"
        android:layout_width="79dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="99dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"

        android:inputType="number"
        android:shadowColor="#2DFA16"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="21dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="240dp"
        android:background="#2ECB71"
        android:text="Add Course"
        android:inputType="text"
        android:textColor="#FBFBFB"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>